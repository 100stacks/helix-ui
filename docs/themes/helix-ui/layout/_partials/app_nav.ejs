<nav class="app-nav">
    <% for (var _item in theme.nav.top) {
        var items = theme.nav.top;
    %>
        <a
            class="hxNavItem theme-nav <%= is_current(items[_item]) ? 'current' : '' %>"
            href="<%- url_for(items[_item]) %>"
        >
            <%= _item %>
        </a>
    <% } %>

    <section>
        <header>Components</header>
        <% for (var _item in theme.nav.components) {
            var items = theme.nav.components;
        %>
            <a
                class="hxNavItem theme-nav <%= is_current(items[_item]) ? 'current' : '' %>"
                href="<%- url_for('/components/' + items[_item]) %>"
            >
                <%= _item %>
            </a>
        <% } %>
    </section>
</nav>
